<Window x:Class="DBApp.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DBApp"
        mc:Ignorable="d"
        ResizeMode="NoResize" Title="AdminPanel" SizeToContent="Height" Width="800">
    <StackPanel>
        <ComboBox SelectionChanged="Tables_OnSelectionChanged" Name="Tables" SelectedIndex="0" MouseEnter="Tables_OnMouseEnter"/>
        <Button Name="AddEntry" Height="20" Content="Добавить новую запись в выбранную таблицу" Click="AddEntry_OnClick"/>
        <Button Name="Filter" Height="20" Content="Фильтры" Click="Filter_OnClick"/>
        <Button Name="DeleteEntry" Height="20" Content="Удалить выбранную запись из базы данных" Click="DeleteEntry_OnClick"/>
        <DataGrid Name="Table" MouseDoubleClick="Table_OnMouseDoubleClick" IsReadOnly="True" >
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <EventSetter Event="MouseDoubleClick" Handler="DataGridCell_MouseDoubleClick"/>
                </Style>
            </DataGrid.Resources>
        </DataGrid>
    </StackPanel>
</Window>
